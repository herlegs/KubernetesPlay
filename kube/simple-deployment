apiVersion: apps/v1
kind: Deployment
metadata:
  name: hellodeployment
  namespace: test
spec:
  replicas: 1
  selector:
    matchLabels:
      app: helloapp
  template:
    metadata:
      labels:
        app: helloapp
      annotations:
        "consul.hashicorp.com/connect-inject": "true"
    spec:
      serviceAccount: hello
      containers:
      - name: helloc
        image: stardust1991/hellomain:latest
        imagePullPolicy: Always
        resources:
          requests:
            cpu: 101m
            memory: 100Mi
        env:
          - name: ENDPOINT
            value: "apis/"
          - name: INTERVAL_MINUTE
            value: "1"
        ports:
        - containerPort: 8080
