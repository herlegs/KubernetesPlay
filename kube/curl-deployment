apiVersion: apps/v1
kind: Deployment
metadata:
  name: curltest
  namespace: test
spec:
  replicas: 1
  selector:
    matchLabels:
      app: curlapp
  template:
    metadata:
      labels:
        app: curlapp
    spec:
      serviceAccount: hello
      containers:
      - name: curlc
        image: ubuntu
        imagePullPolicy: Always
        resources:
          requests:
            cpu: 100m
            memory: 100Mi
        ports:
        - containerPort: 8080